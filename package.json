{
  "name": "gpt-brainrot-extension",
  "displayName": "GPT Brainrot Middleware",
  "description": "A VS Code extension that displays ads and brainrot content while GPT is thinking",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:gpt-brainrot.openChat"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gpt-brainrot.openChat",
        "title": "GPT Brainrot: Open Chat Panel"
      }
    ],
    "configuration": {
      "title": "GPT Brainrot",
      "properties": {
        "brainrotGpt.enableAds": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable advertisement banners during thinking phase"
        },
        "brainrotGpt.adRefreshInterval": {
          "type": "number",
          "default": 0,
          "description": "Interval in milliseconds between ad refreshes (0 = new ad per thinking phase)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  }
}
